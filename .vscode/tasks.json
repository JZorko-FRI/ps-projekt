{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "${file}",
                "-g",
                "-lm",
                "-Wl,-rpath,'$ORIGIN/../lib'",
                "-L'../lib'",
                "-l:'libfreeimage.so.3'",
                "-fopenmp",
                "-O2",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc",
            "presentation": {
                "focus": true,
            }
        },
    ]
}
